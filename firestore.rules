rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat messages: authenticated users can read and write their own messages
    match /chat_messages/{messageId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Chat sessions: users can read and write their own chat sessions
    match /chat_sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Public configuration (read-only for authenticated users)
    match /config/{configId} {
      allow read: if request.auth != null;
    }
    
    // Analytics data (write-only for authenticated users)
    match /analytics/{analyticsId} {
      allow create: if request.auth != null;
    }
  }
}