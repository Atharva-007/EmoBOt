rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Images: Allow authenticated users to read/write their own images
    match /users/{userId}/images/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public images: Allow all to read, authenticated users to write
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Chat attachments: Allow authenticated users to read/write
    match /chat_attachments/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule: deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}