<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmuBot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ai_primary</item>
        <item name="colorPrimaryVariant">@color/ai_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ai_accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EmuBot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.EmuBot.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EmuBot.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Glass Material Button Style -->
    <style name="Widget.EmuBot.Button.Glass" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="elevation">8dp</item>
        <item name="rippleColor">@color/overlay_light</item>
    </style>
    
    <!-- Glass Text Input Style -->
    <style name="Widget.EmuBot.TextInputLayout.Glass" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/overlay_strong</item>
        <item name="boxStrokeColor">@color/glass_border_strong</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
</resources>