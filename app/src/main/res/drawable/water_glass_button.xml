<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80FFFFFF"
                android:centerColor="#60FFFFFF"
                android:endColor="#40FFFFFF"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="#99FFFFFF" />
            <size
                android:width="160dp"
                android:height="50dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#70FFFFFF"
                android:centerColor="#50FFFFFF" 
                android:endColor="#30FFFFFF"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1.5dp"
                android:color="#88FFFFFF" />
            <size
                android:width="160dp"
                android:height="50dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#60FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
            <size
                android:width="160dp"
                android:height="50dp" />
        </shape>
    </item>
</selector>