<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#667eea"
                android:angle="0"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#764ba2"
                android:centerColor="#f093fb"
                android:endColor="#764ba2"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#f093fb"
                android:centerColor="#4facfe"
                android:endColor="#f093fb"
                android:angle="90"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4facfe"
                android:centerColor="#00f2fe"
                android:endColor="#4facfe"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00f2fe"
                android:centerColor="#667eea"
                android:endColor="#00f2fe"
                android:angle="180"
                android:type="linear" />
        </shape>
    </item>
    
</animation-list>