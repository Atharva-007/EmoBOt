<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/auth_primary"
                android:endColor="@color/auth_secondary"
                android:angle="45" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="@color/overlay_medium" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_start_secondary"
                android:endColor="@color/gradient_end_secondary"
                android:angle="45" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="@color/overlay_light" />
        </shape>
    </item>
</selector>